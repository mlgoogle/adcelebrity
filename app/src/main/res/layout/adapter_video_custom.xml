<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"

            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_custom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"

            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_14sp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"

            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_ask_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"

        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/fontSize_16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_go_record"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/shape_marker_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未完成"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize_14sp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_look"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_look_answer"
                android:text="观看回答"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_FB9938"
                android:layout_marginRight="44dp"
                />

            <TextView
                android:id="@+id/tv_look_ask"
                android:text="观看提问"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FB9938"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_heard_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="@string/look_num"
            android:drawableLeft="@drawable/heard_icon"
            android:drawablePadding="5dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_14sp" />
    </RelativeLayout>

</LinearLayout>