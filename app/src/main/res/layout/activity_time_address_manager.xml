<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cloudTop.starshare.widget.NormalTitleBar
        android:id="@+id/nt_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:weightSum="3"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约见城市"
                android:layout_marginLeft="@dimen/dp_25"
                android:textSize="@dimen/fontSize_14sp"
                android:textColor="@color/color_grey_999999"

                />
            <LinearLayout
                android:id="@+id/ll_meet_address"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                >
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:textSize="@dimen/fontSize_16sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/font_333333"
                />
                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约见起始日期"
                android:layout_marginLeft="@dimen/dp_25"
                android:textSize="@dimen/fontSize_14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_grey_999999"
                />

            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-01-01"
                    android:textColor="@color/font_333333"
                    android:textSize="@dimen/fontSize_16sp" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约见结束日期"
                android:layout_marginLeft="@dimen/dp_25"
                android:textSize="@dimen/fontSize_14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_grey_999999"
                />
            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                >

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-01-01"
                    android:textColor="@color/font_333333"
                    android:textSize="@dimen/fontSize_16sp" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_27"
        android:text="@string/meeting_address_time_tips"
        android:textColor="@color/font_999999"
        android:textSize="@dimen/fontSize_12sp" />

    <TextView
        android:id="@+id/tv_confirm"
        android:clickable="true"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/dp_97"
        android:background="@drawable/button_bank_message_selected"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_14sp" />

</LinearLayout>