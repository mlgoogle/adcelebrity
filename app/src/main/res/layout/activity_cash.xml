<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cloudTop.starshare.widget.NormalTitleBar
                android:id="@+id/nt_title"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginTop="23dp"
                android:background="@color/color_F6F6F6"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="@string/cash_user_account"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_user_bank_cssount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:textColor="@color/font_333333"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/main_bg_color"
                android:orientation="vertical"
                android:padding="@dimen/dp_13">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/cash_money"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_14" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/cash_sign"
                        android:textColor="@color/font_333333"
                        android:textSize="@dimen/text_size_24" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="@dimen/dp_7"
                        android:background="@color/color_cccccc" />


                    <EditText
                        android:id="@+id/et_input_cash_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="输入金额" />


                </LinearLayout>

                <include layout="@layout/layout_item_bottom_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_26">

                    <TextView
                        android:id="@+id/tv_user_available_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cash_available_money"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_cash_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/cash_all_money"
                        android:textColor="@color/color_FB9938"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

                <Button
                    android:id="@+id/cash"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_28"
                    android:background="@drawable/button_bank_message_selected"
                    android:gravity="center"
                    android:text="@string/money_cash"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/fontSize_14sp" />

                <TextView
                    android:id="@+id/tv_forget_deal_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="@string/forget_deal_pwd"
                    android:textColor="@color/font_999999"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <com.cloudTop.starshare.widget.PasswordView
            android:id="@+id/passwordView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:scrollbars="none">-->


</LinearLayout>