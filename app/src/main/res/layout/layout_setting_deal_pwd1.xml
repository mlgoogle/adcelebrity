<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set_pwd_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_setting_deal_pwd">

    <com.cloudTop.starshare.widget.NormalTitleBar
        android:id="@+id/nt_title1"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_37"
        android:text="@string/setting_pwd_tip"
        android:textColor="@color/color_434343"
        android:textSize="@dimen/text_size_14" />

    <com.cloudTop.starshare.ui.view.PayPwdEditText
        android:id="@+id/ppe_pwd1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30" />

    <Button
        android:id="@+id/btn_next1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="134dp"
        android:background="@drawable/selector_verification"
        android:padding="@dimen/dp_12"
        android:text="@string/setting_next"
        android:textColor="@color/color_f8f8f8"
        android:textSize="@dimen/dp_16" />
</LinearLayout>